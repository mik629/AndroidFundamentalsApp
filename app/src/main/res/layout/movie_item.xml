<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/movie_card"
    style="@style/MovieCard"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/movie_card_height"
    android:backgroundTint="@android:color/transparent"
    android:padding="0dp"
    app:cardCornerRadius="@dimen/card_radius"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:padding="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avengers_bgd" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:background="@color/dark_grey" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/min_age"
                android:layout_width="@dimen/min_age_size"
                android:layout_height="@dimen/min_age_size"
                android:layout_margin="@dimen/activity_medium_margin"
                android:background="@drawable/age_bgd"
                android:gravity="center"
                android:text="@string/movie_min_age"
                android:textSize="@dimen/text_small_size"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="@dimen/heart_width"
                android:layout_height="@dimen/heart_height"
                android:layout_marginTop="@dimen/margin_12dp"
                android:layout_marginEnd="6dp"
                android:src="@drawable/ic_like" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/genres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_medium_margin"
            android:textColor="@color/pink"
            android:textSize="@dimen/text_tiny_size"
            tools:text="@string/avengers_genre" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_medium_margin"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/rating_bar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:indeterminateDrawable="@drawable/rating_small"
                android:maxHeight="12dp"
                android:minHeight="12dp"
                android:numStars="5"
                android:progressBackgroundTint="@color/grey"
                android:progressDrawable="@drawable/rating"
                android:rating="4" />

            <TextView
                android:id="@+id/reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                android:textColor="@color/grey"
                android:textSize="@dimen/text_tiny_size"
                android:textStyle="bold"
                tools:text="@string/movie_reviews" />
        </LinearLayout>

        <TextView
            android:id="@+id/movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="@dimen/activity_medium_margin"
            android:layout_marginTop="@dimen/activity_standard_margin"
            android:textSize="@dimen/text_medium_size"
            android:textStyle="bold"
            tools:text="@string/avengers_title" />

        <TextView
            android:id="@+id/movie_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_medium_margin"
            android:layout_marginEnd="@dimen/activity_medium_margin"
            android:layout_marginBottom="@dimen/activity_medium_margin"
            android:textAllCaps="true"
            android:textColor="@color/grey_medium"
            android:textStyle="bold"
            android:textSize="@dimen/text_small_size"
            tools:text="137 Min" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
